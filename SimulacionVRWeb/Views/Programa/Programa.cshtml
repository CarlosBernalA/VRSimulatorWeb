
@{
    ViewBag.Title = "Programa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script src="~/Content/assets/scripts/Script_Programa.js"></script>
    <script src="~/Content/assets/vendor/jquery-slimscroll/jquery.slimscroll.min.js"></script>
}

<div class="content-heading clearfix">
    <div class="heading-left">
        <h1 class="page-title" id="view-title"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Programa</font></font></h1>
        <p class="page-subtitle" id="view-description"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Panel de administracion para programas</font></font></p>
    </div>
    <ul class="breadcrumb" id="view-breadcrumb">
        <li class="home"><a href="Principal"><i class="fa fa-home"></i><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"> Principal</font></font></a></li>
        <li class="active"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"> Programa </font></font></li>
    </ul>
</div>
<!--panel lista de programas-->
<div class="panel" id="listaprograma">
    <div class="panel-heading">
        <h3 class="panel-title">Lista de programas</h3>
        <button id="programa_add" type="button" class="btn btn-primary agregarCiudadano" data-toggle="modal" data-target="#agregarprograma" style="margin-top: -9px">
            <i class="fa fa-plus-square"></i> <span>Agregar Programa</span>
        </button>
    </div>
    <div class="panel-body" style="padding-top:5px">
        <div class="row bg-gris pt1 pb1 mb1">
            <div class="col-md-3">
                <label class="control-label">Fecha inicio:</label>
                <input id="fech_ini_fil" data-provide="datepicker" data-date-autoclose="true" class="form-control" data-date-format="dd/mm/yyyy" autocomplete="off">
            </div>
            <div class="col-md-3">
                <label class="control-label">Fecha fin:</label>
                <input id="fech_fin_fil" data-provide="datepicker" data-date-autoclose="true" class="form-control" data-date-format="dd/mm/yyyy" autocomplete="off">
            </div>
            <div class="col-md-1">
                <button id="filtro_fechas" type="button" style="margin-top:24px;width:50px;padding-left:15px;" class="btn btn-primary">
                    <i class="fa fa-search fa-lg"></i>
                </button>
            </div>
        </div>
        
        <table id="datatable-programa" class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>Descripcion</th>
                    <th>Fecha</th>
                    <th>Hora Inicio</th>
                    <th>Hora Fin</th>
                    <th>OPCIONES</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<!-- panel editar programa-->
<div class="panel" id="editarprograma" style="display:none">
    <div class="panel-heading">
        <h3 class="panel-title">Editar programa</h3>
        <button type="button" class="btn btn-danger agregarCiudadano btn-sm" id="listprograma" style="margin-top:-8px;padding-right:5px;padding-left:10px;">
            <i class="fa fa-remove" style="font-size:17px"></i>
        </button>
        <button type="button" class="btn btn-primary agregarCiudadano btn-sm" id="programa_save_edit" style="margin-right:5px;margin-top:-8px;padding-right:5px;padding-left:10px;">
            <i class="fa fa-save" style="font-size:17px"></i>
        </button>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-8">
                <div class="row bg-gris pt1 pb1 mb1">
                    <div class="col-md-12">
                        <legend><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Fecha y Hora</font></font></legend>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Fecha del Programa:</label>
                        <input id="txt_fecha" data-provide="datepicker" data-date-autoclose="true" class="form-control" data-date-format="dd/mm/yyyy">
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Inicio:</label>
                        <div class="input-group basic-clockpicker" data-placement="top" data-autoclose="true">
                            <input id="txt_inicio" type="text" class="form-control" value="">
                            <span class="input-group-addon">
                                <span class="fa fa-clock-o"></span>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Fin:</label>
                        <div class="input-group basic-clockpicker" data-placement="top" data-autoclose="true">
                            <input id="txt_fin" type="text" class="form-control" value="">
                            <span class="input-group-addon">
                                <span class="fa fa-clock-o"></span>
                            </span>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-6">
                        <legend><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Local</font></font></legend>
                        <select id="txt_local" class="form-control localAll"></select>
                    </div>
                    <div class="col-md-6">
                        <legend><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Simulacion</font></font></legend>
                        <select id="txt_simulacion" class="form-control simulacionALL"></select>
                    </div>
                    <div class="col-md-12 mt2">
                        <legend><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Descripción</font></font></legend>
                        <textarea id="txt_descripcion" class="form-control" rows="3" cols="30" required=""></textarea>
                    </div>
                </div>

            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-12">
                        <legend><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Participantes</font></font></legend>
                    </div>

                    <div class="col-md-12" style="padding-right: 85px;">

                        <select id="select-placeholder-single" style="width: 100%;" tabindex="-1" class="select2-hidden-accessible" aria-hidden="true">
                
                        </select>
                
                        <button id="add_participante" type="button" class="btn btn-primary btn-sm" style="float:right;margin-right:-58px;padding-left: 10px;padding-right: 6px;margin-top: -1px;">
                            <i class="fa fa-plus-square fa-lg"></i>
                        </button>
                    </div>
                    <div class="col-md-12 mt2">

                        <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: auto;">
                            <div id="list-message-scrollable" style="overflow: hidden; width: auto; height: auto;">
                                <ul class="inbox-list-message" id="participatesAll">
                                   
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>


    </div>
</div>
<!--modal agregar programa-->
<div class="modal fade" id="agregarprograma" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" style="border: 1px solid;">
            <div class="modal-header" style="background-color: #03A6F0; color: white; border-top-left-radius: 5px; border-top-right-radius: 5px; padding:11px">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" style="font-size: 2.7rem;">&times;</span></button>
                <p class="modal-title" id="gridSystemModalLabel" style="font-size: 17px;">Nuevo Programa</p>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <legend><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Local</font></font></legend>
                        <select id="txt_local_add" class="form-control localAll"></select>
                    </div>
                    <div class="col-md-6">
                        <legend><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Simulacion</font></font></legend>
                        <select id="txt_simulacion_add" class="form-control simulacionALL"></select>
                    </div>
                    <div class="col-md-12 mt1 pt1">
                        <legend><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Descripción</font></font></legend>
                        <textarea id="txt_descripcion_add" class="form-control" rows="3" cols="30" required=""></textarea>
                    </div>
                </div>
                <div class="row bg-gris mt1 pt1 pb1">
                    <div class="col-md-12">
                        <legend><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Fecha y Hora</font></font></legend>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Fecha del Programa:</label>
                        <input id="txt_fecha_add" data-provide="datepicker" data-date-autoclose="true" class="form-control" data-date-format="dd/mm/yyyy">
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Inicio:</label>
                        <div class="input-group basic-clockpicker" data-placement="top" data-autoclose="true">
                            <input id="txt_h_ini_add" type="text" class="form-control" value="09:30">
                            <span class="input-group-addon">
                                <span class="fa fa-clock-o"></span>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Fin:</label>
                        <div class="input-group basic-clockpicker" data-placement="top" data-autoclose="true">
                            <input id="txt_h_fin_add" type="text" class="form-control" value="09:30">
                            <span class="input-group-addon">
                                <span class="fa fa-clock-o"></span>
                            </span>
                        </div>
                    </div>

                </div>
                
            </div>
            <div class="modal-footer" style="padding: 10px;">
                <button type="button" class="btn btn-default" data-dismiss="modal">Calcelar</button>
                <button id="btn_guardar" type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

